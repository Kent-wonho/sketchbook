<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tickness_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tick_max"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="0dp"
            android:src="@drawable/tickness_black" />

        <ImageView
            android:id="@+id/tick_upper_mid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/tickness_black" />

        <ImageView
            android:id="@+id/tick_mid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/tickness_black" />

        <ImageView
            android:id="@+id/tick_under_mid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/tickness_black" />

        <ImageView
            android:id="@+id/tick_min"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="20dp"
            android:src="@drawable/tickness_black" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/pen_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/red"
            android:layout_width="30dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/penred" />

        <ImageView
            android:id="@+id/orange"
            android:layout_width="30dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/penorange" />

        <ImageView
            android:id="@+id/yellow"
            android:layout_width="30dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/penyellow" />

        <ImageView
            android:id="@+id/green"
            android:layout_width="30dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/pengreen" />

        <ImageView
            android:id="@+id/blue"
            android:layout_width="30dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/penblue" />

        <ImageView
            android:id="@+id/magenta"
            android:layout_width="30dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/penmagenta" />

        <ImageView
            android:id="@+id/black"
            android:layout_width="30dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/penblack" />

        <ImageView
            android:id="@+id/eraser"
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/eraser" />
    </LinearLayout>
</LinearLayout>